{
  "manifest_version": 2,
  "name": "Simplified Tab Groups",
  "description": "__MSG_extensionDescription__",
  "version": "0.7.0",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "lbourda.git@gmail.com",
      "strict_min_version": "61.0"
    }
  },

  "icons": {
    "32": "icons/extension-32.png",
    "48": "icons/extension-48.png"
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "16": "icons/togglebutton/icon-16.png",
      "32": "icons/togglebutton/icon-32.png"
    },
    "default_title": "__MSG_popupTitle__",
    "default_popup": "popup/groupspanel.html",
    "theme_icons": [{
      "light": "icons/togglebutton/icon-16.png",
      "dark": "icons/togglebutton/icon-inverted-16.png",
      "size": 16
    }, {
      "light": "icons/togglebutton/icon-32.png",
      "dark": "icons/togglebutton/icon-inverted-32.png",
      "size": 32
    }]
  },

  "background": {
    "scripts": [
      "dist/index.js"
    ]
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Send an 'Open Popup' event"
    },
    "select-prev-group": {
      "suggested_key": {
        "default": "Ctrl+F1",
        "mac": "Command+F1"
      },
      "description": "Send a 'Select the Previous Group' event"
    },
    "select-next-group": {
      "suggested_key": {
        "default": "Ctrl+Shift+F1",
        "mac": "Command+Shift+F1"
      },
      "description": "Send a 'Select the Next Group' event"
    }
  }, 
  
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "tabs",
    "tabHide",
    "storage",
    "sessions"
  ]
}